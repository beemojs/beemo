{
  "private": true,
  "name": "beemo-root",
  "scripts": {
    "setup": "bash ./scripts/buildPackages.sh",
    "build": "yarn run type",
    "clean": "rm -rf ./packages/*/lib",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "posttest": "yarn run eslint",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:int:fail": "beemo run-script run-integration-tests --fail --workspaces=\"@beemo/driver-*\"",
    "test:int:pass": "beemo run-script run-integration-tests --pass --workspaces=\"@beemo/driver-*\"",
    "prettier": "beemo prettier",
    "prerelease": "yarn test",
    "release": "lerna publish",
    "release:bump": "beemo run-script bump-peer-deps",
    "type": "beemo typescript --build --reference-workspaces"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "0.168.0",
    "chalk": "^2.4.2",
    "conventional-changelog-beemo": "^1.3.0",
    "danger": "^7.1.4",
    "fast-glob": "^2.2.7",
    "fs-extra": "^7.0.1",
    "lerna": "^3.15.0",
    "semver": "^6.1.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@local",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "mocha",
      "prettier",
      "typescript",
      "webpack"
    ],
    "settings": {
      "node": true
    },
    "eslint": {
      "rules": {
        "function-paren-newline": "off",
        "no-param-reassign": "off",
        "import/first": "off"
      }
    },
    "jest": {
      "testPathIgnorePatterns": [
        "integration"
      ]
    },
    "prettier": {
      "ignore": ["CHANGELOG.md"]
    }
  }
}
