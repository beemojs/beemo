  },
  "author": "Miles Johnson",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@boost/test-utils": "^2.3.0",
    "typescript": "^4.1.5"
  },
  "peerDependencies": {
    "@beemo/core": "^2.0.0-alpha.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "@boost/event": "^2.3.1",
    "rimraf": "^3.0.2"
