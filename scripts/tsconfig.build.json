{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "./lib",
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2017"
  },
  "exclude": ["*.test.ts"],
  "include": ["./src/**/*", "./types/**/*"]
}
